\definecolor{i6colorscheme1}{RGB}{131,184,26}
\definecolor{i6colorscheme2}{HTML}{0E0F12}  %  e.g. title in headline
\definecolor{i6colorscheme3}{RGB}{224,225,225}  %  e.g. for poster background
\definecolor{i6colorscheme4}{RGB}{131,184,26}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{009059}  %  e.g. title in headline, separation lines
\definecolor{i6colorscheme6}{HTML}{535967}  %  e.g. for alert


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=i6colorscheme2,bg=i6colorscheme3}
\setbeamercolor{title in headline}{fg=i6colorscheme5}
\setbeamercolor{author in headline}{fg=i6colorscheme2}
\setbeamercolor{institute in headline}{fg=i6colorscheme6}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme1}
\setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf,bg=i6colorscheme1,fg=white}

